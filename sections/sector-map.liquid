{% schema %}
{
  "name": "Sector Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Map Heading",
      "default": "SECTOR MAP"
    }
  ],
  "blocks": [
    {
      "type": "sector",
      "name": "Sector",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "sector_label",
          "label": "Sector Label (e.g., SECTOR 01)",
          "default": "SECTOR 01"
        },
        {
          "type": "text",
          "id": "sector_name",
          "label": "Sector Name (e.g., TOPS)",
          "default": "TOPS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sector Map",
      "blocks": [
        {
          "type": "sector"
        },
        {
          "type": "sector"
        },
        {
          "type": "sector"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .sector-map {
    background-color: #EFEBD6; /* Cream */
    padding: 6rem 2rem;
    color: var(--color-overgrowth-forest);
    font-family: var(--font-body-family);
    position: relative;
    overflow: hidden;
    border-top: 2px solid var(--color-overgrowth-forest);
    border-bottom: 2px solid var(--color-overgrowth-forest);
  }

  /* Vintage Topographic Grid Background */
  .sector-map::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(var(--color-overgrowth-forest) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-overgrowth-forest) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.1;
    pointer-events: none;
    z-index: 0;
  }

  /* Dashed Sub-grid */
  .sector-map::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(var(--color-overgrowth-forest) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-overgrowth-forest) 1px, transparent 1px);
    background-size: 10px 10px;
    opacity: 0.05;
    pointer-events: none;
    z-index: 0;
  }

  .sector-map__heading {
    text-align: center;
    font-family: var(--font-heading-family); /* Cooper Black */
    font-size: 3.5rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
    color: var(--color-overgrowth-forest);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sector-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .sector-card {
    background-color: #E8E4D9; /* Paper Color */
    border: 2px solid var(--color-overgrowth-forest);
    padding: 2rem;
    text-decoration: none;
    color: var(--color-overgrowth-forest);
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 220px;
    box-shadow: 4px 4px 0 rgba(26, 59, 40, 0.15);
  }

  .sector-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(26, 59, 40, 0.25);
    background-color: #FDFBF7; /* Lighter Paper */
  }

  .sector-label {
    font-family: var(--font-body-family); /* Courier */
    font-size: 0.9rem;
    margin-bottom: 1rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    border-bottom: 1px solid var(--color-overgrowth-forest);
    padding-bottom: 0.2rem;
  }

  .sector-name {
    font-family: var(--font-heading-family); /* Cooper Black */
    font-size: 2.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* "Map Pin" visual element (CSS only) */
  .sector-card::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 12px;
    height: 12px;
    background-color: var(--color-overgrowth-rust);
    border-radius: 50%;
    border: 2px solid var(--color-overgrowth-forest);
    z-index: 2;
  }

</style>

<div class="sector-map">
  {% if section.settings.heading != blank %}
    <h2 class="sector-map__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="sector-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.collection.url | default: '#' }}" class="sector-card">
        <span class="sector-label">{{ block.settings.sector_label }}</span>
        <span class="sector-name">{{ block.settings.sector_name }}</span>
      </a>
    {% endfor %}
  </div>
</div>
