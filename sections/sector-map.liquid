{% schema %}
{
  "name": "Sector Map",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Map Heading",
      "default": "SECTOR MAP"
    }
  ],
  "blocks": [
    {
      "type": "sector",
      "name": "Sector",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "sector_label",
          "label": "Sector Label (e.g., SECTOR 01)",
          "default": "SECTOR 01"
        },
        {
          "type": "text",
          "id": "sector_name",
          "label": "Sector Name (e.g., TOPS)",
          "default": "TOPS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sector Map",
      "blocks": [
        {
          "type": "sector"
        },
        {
          "type": "sector"
        },
        {
          "type": "sector"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .sector-map {
    background-color: #0d1f15; /* Darker Forest Green */
    padding: 4rem 2rem;
    color: var(--color-overgrowth-neon);
    font-family: var(--font-body-family);
    position: relative;
    overflow: hidden;
  }

  /* Grid Background */
  .sector-map::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(57, 255, 20, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(57, 255, 20, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
    pointer-events: none;
    z-index: 0;
  }

  .sector-map__heading {
    text-align: center;
    font-family: var(--font-heading-family);
    font-size: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
    text-shadow: 0 0 10px rgba(57, 255, 20, 0.5);
  }

  .sector-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .sector-card {
    border: 2px solid var(--color-overgrowth-neon);
    background-color: rgba(0, 0, 0, 0.6);
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 200px;
  }

  .sector-card:hover {
    background-color: rgba(57, 255, 20, 0.1);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.3);
  }

  .sector-label {
    font-size: 0.9rem;
    opacity: 0.8;
    margin-bottom: 0.5rem;
    letter-spacing: 0.1em;
  }

  .sector-name {
    font-size: 2rem;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  /* Scanline Effect on Hover */
  .sector-card::after {
    content: '';
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 50%;
    background: linear-gradient(to bottom, transparent, rgba(57, 255, 20, 0.4), transparent);
    transition: top 0.5s ease;
    pointer-events: none;
  }

  .sector-card:hover::after {
    top: 150%;
    transition: top 1s linear;
  }

  /* Corner Accents */
  .sector-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 2px solid transparent;
    /* Corner borders using gradients or clip-path is complex, let's use box-shadow inset for a techy feel */
    box-shadow: inset 0 0 20px rgba(0,0,0,0.8);
    pointer-events: none;
  }

</style>

<div class="sector-map reveal-on-scroll">
  {% if section.settings.heading != blank %}
    <h2 class="sector-map__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="sector-grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.collection.url | default: '#' }}" class="sector-card">
        <span class="sector-label">{{ block.settings.sector_label }}</span>
        <span class="sector-name">{{ block.settings.sector_name }}</span>
      </a>
    {% endfor %}
  </div>
</div>
